<a class="btn btn-default" href="<%= songs_path %>">Songs Dashboard</a>
<br>
<h1><%= @song.title %></h1>
<h2>Artist: <%= @song.artist %></h2>

<p>Others who added <%= @song.title %>:</p>

<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>Times Added</th>
	</tr>
	<% @users.each do |u| %>
		<% if u.lists.exists?(song:@song) %>
			<tr>
				<td>
					<a href="/users/<%= u.id %>"><%= u.first_name %> <%= u.last_name %></a>
				</td>
				<td><%= u.lists.find_by_song_id(@song.id).count %></td>
			</tr>
		<% end %>
	<% end %>
</table>
