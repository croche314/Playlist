<a class="btn btn-default" href="<%= songs_path %>">Songs Dashboard</a>

<h1><%= @user.first_name %> <%= @user.last_name %>'s Playlist</h1>

<table class="table table-striped">
	<tr>
		<th>Artist</th>
		<th>Title</th>
		<th>Times Added</th>
	</tr>
	<% @songs.each do |s| %>
		<% if s.lists.exists?(user_id: @user.id) %>
	<tr>
		<td><%= s.artist %></td>
		<td>
			<a href="/songs/<%= s.id %>"><%= s.title %></a>
		</td>
		<td>
			<%= List.where(user:@user,song:s)[0].count %>
		</td>
	</tr>
		<% end %>
	<% end %>
</table>